generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  name         String
  email        String @unique
  password     String?
  role         Role @default(CANDIDATE)
  phone        String?
  location     String?
  bio          String?
  linkedIn_URL String?
  gitHub_URL   String?
  portfolio_URL String?
  profilePicUrl String?
  googleId     String? @unique
  jobs         Job[]  @relation("RecruiterJobs")
  applications Application[] 
  JobPreference JobPreference?
}

model Job {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  company      String
  location     String
  type         JobType  @default(FullTime)
  about        String   @default("")
  salary       Int?
  skills       String[]
  respnsblts   String[] @default([])
  requirements String[] @default([])
  benefits     String[] @default([])
  recruiter    User     @relation("RecruiterJobs", fields: [recruiterId], references: [id])
  recruiterId  Int
  embedding    Float[]  @default([])
  jobStatus    JobStatus? @default(ACTIVE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  applications Application[]
}

model Application {
  id          Int      @id @default(autoincrement())
  candidate   User     @relation(fields: [candidateId], references: [id])
  candidateId Int
  job         Job      @relation(fields: [jobId], references: [id])
  jobId       Int
  status      ApplicationStatus @default(APPLIED)
  linkedinUrl String?   // optional
  resumeUrl   String?   // optional
  coverLetter String?   // optional
  reason      String?   // optional
  appliedAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([candidateId, jobId])
}

model JobPreference{
  id Int @id @default(autoincrement())
  candi    User @relation(fields: [candiId],references: [id])
  candiId      Int      @unique 
  title        String
  location     String
  type         JobType  @default(FullTime)
  salary       Int?
  skills       String[]
  resumeUrl     String   // optional
  embedding    Float[]  @default([])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Role {
  CANDIDATE
  RECRUITER
  ADMIN
}


enum ApplicationStatus {
  APPLIED
  INTERVIEW_SCHEDULED
  HIRED
  REJECTED
}

enum JobType{
  FullTime
  PartTime
  Contract
  Internship
}

enum JobStatus{
  ACTIVE
  DEACTIVATED
}
